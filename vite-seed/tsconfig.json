{
    "compilerOptions": {
        "esModuleInterop": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "lib":["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "skipLibCheck": true, // Para ignorar la verificación de tipos de dependencias externas.
        "sourceMap": true,
        "target": "ESNext",
        "strict": true, //comprobaciones estrictas,
        "forceConsistentCasingInFileNames": true, // Evita errores por diferencias de mayúsculas/minúsculas.
        "noUnusedLocals": true, // Detecta variables locales no utilizadas.
        "noUnusedParameters": true, // Detecta parámetros no utilizados en funciones.
        "jsx":"react-jsx" // Configura el soporte para JSX en React.
    },
    "include": ["src", "vite.config.ts"],   
}