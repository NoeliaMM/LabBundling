{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noLib": false,       
        "skipLibCheck": true,      
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "./dist",        
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["src/**/*"]
}